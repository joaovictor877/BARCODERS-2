<!-- views/movimentacao.ejs -->

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movimentação de Material</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script type="text/javascript" src="https://unpkg.com/@zxing/library@latest"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-6 py-12">
        <div class="flex items-center mb-8">
             <a href="/lobby" class="text-indigo-600 hover:text-indigo-800 mr-4">&larr; Voltar ao Lobby</a>
        </div>
        <h1 class="text-4xl font-bold text-gray-800 mb-8">Movimentação para Linha de Produção</h1>

        <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
            <form id="movimentacaoForm">
                <div class="space-y-6">
                    <div>
                        <label for="codigoLote" class="block text-sm font-medium text-gray-700 mb-2">Escanear Código de Barras do Lote</label>
                        <input type="text" id="codigoLote" name="codigoLote" required autofocus 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" 
                               placeholder="Aguardando leitura do scanner...">
                    </div>

                    <div class="border-t border-dashed pt-4">
                        <div id="scanner-container" class="w-full border rounded-lg overflow-hidden hidden bg-black">
                            <video id="video-preview" class="w-full h-auto"></video>
                            <button type="button" id="testCameraBtn" class="w-full mt-2 bg-green-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-green-700 hidden">Testar Câmera Direta (Debug)</button>

                        </div>
                        <div id="camera-controls" class="flex items-center gap-2 mt-2 hidden">
                            <label for="videoSource" class="text-sm">Câmera:</label>
                            <select id="videoSource" class="flex-grow p-1 border rounded text-sm"></select>
                        </div>
                        <button type="button" id="startCameraBtn" class="w-full mt-2 bg-gray-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-700">Escanear com a Câmera</button>
                        <button type="button" id="stopCameraBtn" class="w-full mt-2 bg-red-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-red-700 hidden">Parar Câmera</button>
                    </div>

                    <div>
                        <label for="maquina" class="block text-sm font-medium text-gray-700 mb-2">Máquina de Destino</label>
                        <select id="maquina" name="maquina" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                            <% if (maquinas.length > 0) { %>
                                <% maquinas.forEach(m => { %>
                                    <option value="<%= m.Identificacao %>"><%= m.Modelo %></option>
                                <% }); %>
                            <% } else { %>
                                <option disabled>Nenhuma máquina cadastrada</option>
                            <% } %>
                        </select>
                    </div>

                    <div>
                        <label for="quantidade" class="block text-sm font-medium text-gray-700 mb-2">Quantidade a ser Movida</label>
                        <input type="number" id="quantidade" name="quantidade" required min="1"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" 
                               placeholder="Ex: 50">
                    </div>

                    <div class="flex justify-end pt-4 border-t">
                        <button type="submit" id="registrarBtn" 
                                class="w-full sm:w-auto bg-indigo-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-indigo-700 transition-colors disabled:bg-gray-400">
                            Registrar Movimentação
                        </button>
                    </div>
                </div>
            </form>
            <div id="successMessage" class="hidden mt-4 p-4 bg-green-100 text-green-700 rounded-lg"></div>
            <div id="errorMessage" class="hidden mt-4 p-4 bg-red-100 text-red-700 rounded-lg"></div>
        </div>
    </div>
    <script src="/js/movimentacao.js"></script>
</body>
</html>