<!-- views/lobby.ejs -->

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lobby - BARCODER'S</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-6 py-12">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-4xl font-bold text-gray-800">Bem-vindo, <%= nome %>!</h1>
            <a href="/logout" class="bg-red-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-red-700 transition-colors">Logout</a>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-700 mb-6">Ações Disponíveis</h2>
            <% if (links && links.length > 0) { %>
                <ul class="space-y-4">
                    <% links.forEach(link => { %>
                        <li class="border-l-4 border-indigo-500 pl-4">
                            <a href="<%= link.url %>" class="text-lg text-indigo-600 hover:underline font-medium">
                                <%= link.nome %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="text-gray-500">Você não tem permissões para acessar nenhuma página no momento.</p>
            <% } %>
        </div>
    </div>
</body>
</html>