<!-- views/recebimento.ejs -->

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Recebimento</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- 1. Adicionando a biblioteca de Código de Barras -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-6 py-12">
        <div class="flex items-center mb-8">
             <a href="/lobby" class="text-indigo-600 hover:text-indigo-800 mr-4">&larr; Voltar ao Lobby</a>
        </div>
        <h1 class="text-4xl font-bold text-gray-800 mb-8">Controle de Recebimento de Matéria-Prima</h1>

        <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
            <form id="recebimentoForm">
                <div class="space-y-6">
                    <div>
                        <label for="fornecedor" class="block text-sm font-medium text-gray-700 mb-2">Fornecedor</label>
                        <select id="fornecedor" name="fornecedor" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                            <% fornecedores.forEach(f => { %>
                                <option value="<%= f.CNPJ %>"><%= f.Nome %></option>
                            <% }); %>
                        </select>
                    </div>

                   

                    <div>
                        <label for="quantidade" class="block text-sm font-medium text-gray-700 mb-2">Quantidade</label>
                        <input type="number" id="quantidade" name="quantidade" required min="1" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" placeholder="Ex: 100">
                    </div>

                    <div>
                        <label for="codigoLote" class="block text-sm font-medium text-gray-700 mb-2">Código de Lote</label>
                        <input type="text" id="codigoLote" name="codigoLote" readonly class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed">
                    </div>

                    <!-- Área para exibir o código de barras -->
                    <div id="barcode-display" class="hidden mt-6 py-4 border-t border-dashed">
                        <h3 class="text-center text-sm font-medium text-gray-600 mb-2">Código de Barras Gerado</h3>
                        <div class="flex justify-center">
                            <svg id="barcode"></svg>
                        </div>
                    </div>

                    <div class="flex justify-end items-center gap-4 pt-4 border-t">
                         <button type="button" id="gerarCodigoBtn" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                            Gerar Código de Lote
                        </button>
                        <button type="submit" id="registrarBtn" disabled class="bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-indigo-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                            Registrar Entrada
                        </button>
                    </div>
                </div>
            </form>
            <div id="successMessage" class="hidden mt-4 p-4 bg-green-100 text-green-700 rounded-lg"></div>
            <div id="errorMessage" class="hidden mt-4 p-4 bg-red-100 text-red-700 rounded-lg"></div>
        </div>
    </div>
    <script src="/js/recebimento.js"></script>
</body>
</html>